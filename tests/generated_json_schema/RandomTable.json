{
  "title": "RandomTable",
  "type": "object",
  "properties": {
    "table_name": {
      "title": "Table Name",
      "minLength": 1,
      "type": "string"
    },
    "event_count_constraint": {
      "$ref": "#/definitions/EventCountConstraint"
    },
    "events": {
      "title": "Events",
      "type": "array",
      "items": {
        "$ref": "#/definitions/RandomTableEventInfo"
      }
    }
  },
  "required": [
    "table_name",
    "event_count_constraint",
    "events"
  ],
  "definitions": {
    "EventCountConstraint": {
      "title": "EventCountConstraint",
      "type": "object",
      "properties": {
        "minimum": {
          "title": "Minimum",
          "default": 0,
          "minimum": 0,
          "type": "integer"
        },
        "maximum": {
          "title": "Maximum",
          "default": 1000,
          "minimum": 0,
          "maximum": 1000,
          "type": "integer"
        }
      }
    },
    "SequencedSixSidedDieRange": {
      "title": "SequencedSixSidedDieRange",
      "type": "object",
      "properties": {
        "minimum": {
          "title": "Minimum",
          "exclusiveMinimum": 0,
          "type": "integer"
        },
        "maximum": {
          "title": "Maximum",
          "exclusiveMinimum": 0,
          "type": "integer"
        }
      },
      "required": [
        "minimum",
        "maximum"
      ]
    },
    "MapObjectDimensionConstraint": {
      "title": "MapObjectDimensionConstraint",
      "type": "object",
      "properties": {
        "minimum": {
          "title": "Minimum",
          "minimum": 1,
          "maximum": 500,
          "type": "integer"
        },
        "maximum": {
          "title": "Maximum",
          "minimum": 1,
          "maximum": 500,
          "type": "integer"
        }
      },
      "required": [
        "minimum",
        "maximum"
      ]
    },
    "UnitOfMeasurement": {
      "title": "UnitOfMeasurement",
      "description": "An enumeration.",
      "enum": [
        "m"
      ]
    },
    "MapObjectSizeConstraint": {
      "title": "MapObjectSizeConstraint",
      "type": "object",
      "properties": {
        "x": {
          "$ref": "#/definitions/MapObjectDimensionConstraint"
        },
        "y": {
          "$ref": "#/definitions/MapObjectDimensionConstraint"
        },
        "unit": {
          "default": "m",
          "allOf": [
            {
              "$ref": "#/definitions/UnitOfMeasurement"
            }
          ]
        }
      },
      "required": [
        "x"
      ]
    },
    "RandomTableEventInfo": {
      "title": "RandomTableEventInfo",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "description": {
          "title": "Description",
          "type": "string"
        },
        "range": {
          "$ref": "#/definitions/SequencedSixSidedDieRange"
        },
        "size_constraint": {
          "$ref": "#/definitions/MapObjectSizeConstraint"
        }
      },
      "required": [
        "name",
        "range"
      ]
    }
  }
}